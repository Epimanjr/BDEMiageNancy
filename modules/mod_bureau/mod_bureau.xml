<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Bureau</name>
    <author>Maxime BLAISE</author>
    <version>1.0.0</version>
    <description>Module d'affichage du bureau.</description>
    <files>
        <filename>mod_bureau.xml</filename>
        <filename module="mod_bureau">mod_bureau.php</filename>
        <folder>elements</folder>
        <folder>css</folder>
        <filename>css/bureau.css</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/modules/mod_bureau/elements">
                
                
                <field
                    name="bureau"
                    type="bureau"
                    label="Test 2" />

                <field 
                    name="sauvegarde"
                    type="hidden"
                    label=""   
                />

                <field
                    name="sauvegardetmp"
                    type="hidden"
                    label=""
                />
                
                <field 
                    name="description"
                    type="textarea"
                    label="Description du bureau"
                />
            </fieldset>
        </fields>
    </config>
</extension>